{
  "manifest_version": 2,
  "name": "Meaning Getter",
  "version": "1.0",
  "description": "Get meanings of selected words instantly",
  
  "permissions": [
    "activeTab",
    "https://api.dictionaryapi.dev/"
  ],

  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Meaning Getter"
  },

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
} 