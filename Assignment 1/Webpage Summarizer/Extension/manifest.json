{
  "manifest_version": 2,
  "name": "Webpage Summarizer",
  "version": "1.0",
  "description": "Summarizes webpage contents",
  "browser_specific_settings": {
    "gecko": {
      "id": "{c0ee1292-3e43-4f42-b56c-66d8d23d82fe}",
      "strict_min_version": "42.0"
    }
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "http://localhost:8050/*",
    "http://localhost:11434/*",
    "https://api.openai.com/*"
  ],
  "content_security_policy": "script-src 'self'; connect-src 'self' http://localhost:8050 http://localhost:11434 https://api.openai.com;",
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
} 